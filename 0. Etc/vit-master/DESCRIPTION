Package: vit
License: GPL-2
Version: 1.2.1
Title: Visual Inference Tools
LazyData: true
Type: Package
Authors@R: c(person("Garrett", "Grolemund", role = "aut",
                    email = "grolemund@rice.edu"),
             person("Simon", "Potter", role = c("aut", "cre"),
                    email = "spot023@aucklanduni.ac.nz"),
